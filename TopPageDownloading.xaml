<UserControl x:Class="GraphicalMirai.TopPageDownloading"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphicalMirai.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="#80000000">
    <Grid>
        <Grid x:Name="downloaGrid" VerticalAlignment="Center" Margin="100,0,100,0">
            <TextBlock Text="下载文件" Foreground="#FFF" FontSize="48" Margin="0,0,0,32"/>
            <TextBlock x:Name="downloadInfo" VerticalAlignment="Bottom" TextAlignment="Right" Margin="10,0,10,15" Foreground="#EEE"/>
            <Rectangle VerticalAlignment="Bottom" Height="10" Fill="#6f79a8" />
            <Rectangle x:Name="downloadProcess" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="10" Fill="#d1d9ff" />
        </Grid>
    </Grid>
</UserControl>
